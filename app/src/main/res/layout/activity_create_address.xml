<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAddressActivity">

    <EditText
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addressText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cityText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/insert_address"/>
    <EditText
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/insert_city"
            android:ems="10"
            android:id="@+id/cityText"
            app:layout_constraintStart_toStartOf="@+id/addressText" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmButton"/>
    <Button
            android:text="@string/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="272dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>